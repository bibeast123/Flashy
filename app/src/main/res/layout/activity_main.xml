<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="@string/who_was_the_first_president_of_the_united_states_of_america"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="@string/george_washington1"
        android:textSize="40sp"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/myBtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/plus_icon"
        android:layout_height="40dp"
        android:layout_width="40dp" />

    <ImageView
        android:id="@+id/myNextBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/flashcard_question"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="-120dp"
        app:srcCompat="@drawable/ic_iconmonstr_arrow_right_circle_thin" />
</RelativeLayout>